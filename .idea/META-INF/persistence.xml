<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name = "production">
        <class>package io.fulchr3356.upkeepassistant.models.Employee</class>
        <class>package io.fulchr3356.upkeepassistant.models.Department</class>
        <class>package io.fulchr3356.upkeepassistant.models.Sale</class>
        <class>package io.fulchr3356.upkeepassistant.models.Budget</class>

        <properties>
            <!-- Configuring The Database Connection Details -->
            <property name="javax.persistence.jdbc.driver"
                      value="org.mariadb.jdbc.Driver"/>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mariadb://127.0.0.1:3306/upkeep_assistant"/>

            <property name="javax.persistence.jdbc.user"
                      value="admin"/>

            <property name="javax.persistence.jdbc.password"
                      value="password"/>

            <property name="eclipselink.logging.level.sql"
                      value="FINE"/>

            <property name="eclipselink.ddl-generation"
                      value="create-tables" />

            <property name="eclipselink.ddl-generation.output-mode"
                      value="database" />
        </properties>
    </persistence-unit>
    <persistence-unit name = "testing">
        <class>package io.fulchr3356.upkeepassistant.models.Employee</class>
        <class>package io.fulchr3356.upkeepassistant.models.Department</class>
        <class>package io.fulchr3356.upkeepassistant.models.Sale</class>
        <class>package io.fulchr3356.upkeepassistant.models.Budget</class>

        <properties>
            <!-- Configuring The Database Connection Details -->
            <property name="javax.persistence.jdbc.driver"
                      value="org.mariadb.jdbc.Driver"/>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mariadb://127.0.0.1:3306/upkeep_assistant"/>

            <property name="javax.persistence.jdbc.user"
                      value="admin"/>

            <property name="javax.persistence.jdbc.password"
                      value="password"/>

            <property name="eclipselink.logging.level.sql"
                      value="FINE"/>

            <property name="eclipselink.ddl-generation"
                      value="create-tables" />

            <property name="eclipselink.ddl-generation.output-mode"
                      value="database" />
        </properties>
    </persistence-unit>
</persistence>
